<div class="container">
  <%= @store.name %>
  <%= @store.description %>
</div>

<div class="container">
<%= form_for @store, url: {action: "update"} do |f| %>
  <%= f.text_field :name %><br />
  <%= f.text_area  :description %><br />
  <%= f.file_field :image %><br />

  <%= f.submit %>
<% end %>
</div>