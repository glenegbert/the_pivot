<h1> Where would you like your items delivered? </h1>

  <h3> Please Choose an Address </h3>
<div class="row">
  <% @addresses.each do |a| %>
      <div <div class="col-sm-1 col-md-3 address_buttons">
         <%= a.street_address %>
         <%= a.city %>,
         <%= a.state %>
         <%= a.zip %>
         <%= form_tag orders_path, method: :post do %>
         <%= hidden_field_tag :address, a.id %>
           <%= button_tag(:class => "btn btn-primary btn-sm", :id => "cart_button") do %>
              use this address <span class="glyphicon glyphicon-shopping-cart" ></span>
           <% end %>
         <% end %>
         <br>
      </div>
    <%end%>
</div>
<%= form_tag new_address_path, method: :get do %>
<%= button_tag(:class => "btn btn-success btn-lg", :id => "cart_button") do %>
Enter a New Address <span class="glyphicon glyphicon-shopping-cart" ></span>
<% end %>
<% end %>
