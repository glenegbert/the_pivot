
<%= render "layouts/errors", object: @user%>

<%= form_for(@user) do |f| %>

  <div class="field form-group users-form">
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name %>
  </div>
  <div class="field", id="email_address_field form-group users-form">
    <%= f.label :email_address %><br>
    <%= f.text_field :email_address %>
  </div>
  <div class="field", id="password_field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :screen_name %><br>
    <%= f.text_field :screen_name %>
  </div>
</br>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
